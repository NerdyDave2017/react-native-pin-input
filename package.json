{
  "name": "react-native-pin-input",
  "version": "1.0.0",
  "description": "A fully accessible and customizable PIN input component for React Native, built with a single hidden TextInput for a native-like experience.",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index.tsx",
  "source": "src/index.tsx",
  "exports": {
    ".": {
      "source": "./src/index.tsx",
      "types": "./lib/typescript/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "lib",
    "src",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "component",
    "pin",
    "otp",
    "input",
    "typescript"
  ],
  "author": "Mideseniordev <nerdydave2017@gmail.com>",
  "license": "MIT",
  "repository": "git@github.com:NerdyDave2017/react-native-pin-input.git",
  "bugs": {
    "url": "https://github.com/your-username/react-native-pin-input/issues"
  },
  "homepage": "https://github.com/your-username/react-native-pin-input#readme",
  "devDependencies": {
    "@commitlint/config-conventional": "^17.0.2",
    "@evilmartians/lefthook": "^1.2.2",
    "@react-native/eslint-config": "^0.72.2",
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/jest": "^29.2.1",
    "@types/react": "^18.0.24",
    "commitlint": "^17.0.2",
    "del-cli": "^5.0.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.2.1",
    "pod-install": "^0.1.0",
    "prettier": "^2.0.5",
    "react": "18.2.0",
    "react-native": "0.74.1",
    "react-native-builder-bob": "0.23.1",
    "typescript": "^5.0.4"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
