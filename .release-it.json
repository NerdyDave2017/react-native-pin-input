{
  "release-it": {
    "github": {
      "release": true
    },
    "npm": {
      "publish": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    },
    "hooks": {
      "before:init": ["pnpm run lint", "pnpm test"],
      "after:bump": "pnpm run prepare"
    }
  }
}
